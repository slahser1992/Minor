{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "noImplicitAny": true,
    "rootDir": ".", 
    "outDir": "./dist/",
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": false,
    "strict": true,
    "typeRoots": [
      "@types"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@gql/*": ["gql/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
    },
  },
  "exclude": [
    "node_modules",
    "*.json"
  ]
}